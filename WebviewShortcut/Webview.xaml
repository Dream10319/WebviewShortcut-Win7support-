<Window x:Class="WebviewShortcut.Webview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebviewShortcut"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="Webview" Height="450" Width="800"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <wpf:ChromiumWebBrowser
            x:Name="Browser" Visibility="Hidden"/>
        <Image x:Name="loadingImage" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="200"/>
    </Grid>
</Window>
